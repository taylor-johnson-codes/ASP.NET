@*needed for passing the list from the controller*@
@model IEnumerable<Instructor>
@*model needs to be all lower case here; capitalized when used below*@

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Sofia">
    <title>Instructors List</title>
</head>
<body>
    <h1>List of Instructors</h1>
    <table class="table table-hover table-dark">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Position</th>
                <th>Show Details</th>
            </tr>
        </thead>
        <tbody>
            @*Model needs to be capitalized here; all lower case at the top of the file*@
            @foreach(var instr in Model){
            <tr>
                <td>@instr.FirstName</td>
                <td>@instr.LastName</td>
                <td>@instr.Position</td>
                @*html help*@
                @*<td>@Html.ActionLink("Details", "ShowDetails", new {id=instr.InstructorId})</td>*@
                @*tag helper*@
                <td><a asp-action="ShowDetails" asp-route-id="@instr.InstructorId">Details</a></td>
            </tr>
            }
        </tbody>
        @*<tfoot>
            <tr>
                <td>Foot example</td>
                <td>Foot example</td>
                <td>Foot example</td>
            </tr>
        </tfoot>*@
    </table>
</body>
</html>
