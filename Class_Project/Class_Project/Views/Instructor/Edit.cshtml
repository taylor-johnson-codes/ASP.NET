@model Instructor

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js"></script>
    <title>Edit Instructor</title>
</head>
<body>
    <h1>Edit Instructor</h1>
    @if(Model == null)
    {
        <h2>Instructor not found</h2>
    }
    else
    {
        @*displays error messages (if any) all in one place*@
        <div class="text-danger fw-bold" asp-validation-summary="All"></div>

        <form asp-action="Edit" method="post">
            @*needed for model-binding so id passes to Delete action (don't want user to be able to edit the id value)*@
            @*without this, id would get reset to default value of zero*@
            <input asp-for="InstructorId" type="hidden"/> <br />

            <label asp-for="FirstName"></label> <input asp-for="FirstName" /> <span class="text-danger fw-bold" asp-validation-for="InstructorId"></span><br />
            @*the span tags display in-line validation error messages (if any)*@

            <label asp-for="LastName"></label> <input asp-for="LastName" /> <span class="text-danger fw-bold" asp-validation-for="InstructorId"></span><br />

            <label asp-for="IsTenured"></label> <input asp-for="IsTenured" /> <span class="text-danger fw-bold" asp-validation-for="InstructorId"></span><br />

            @*adding select tag for a drop-down menu*@
            <label asp-for="Position"></label> <select asp-for="Position" asp-items="Html.GetEnumSelectList(typeof(Level))"></select> <span class="text-danger fw-bold" asp-validation-for="InstructorId"></span><br />

            <label asp-for="HireDate"></label> <input asp-for="HireDate" /> <span class="text-danger fw-bold" asp-validation-for="InstructorId"></span><br />

            @*submit data to server (needs to be within form tags)*@
            <input class="btn btn-success" type="submit" value="Save Changes" />
        </form>

        <br>
        <a type="button" class="btn btn-primary" asp-action="Index">Back to Index</a>
    }
</body>
</html>
