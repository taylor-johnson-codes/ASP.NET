@model Instructor

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>Delete Instructor</title>
</head>
<body class="text-center">
    <h2>Are you sure you want to delete this professor?</h2>
    <h3>@Model.FirstName @Model.LastName</h3>

    @*needed for model-binding so id passes to Delete action*@
    <input asp-for=InstructorId type= hidden />

    <form asp-action="Delete" method="post">
        @*the submit button calls the Delete action; the submit button needs to be within a form*@
        <button type="submit" class="btn btn-success">Yes, delete</button>
        @*the regular button just takes the user back to the previous page; alternative: onclick="history.go(-1)*@
        <button type="button" onclick="history.back()" class="btn btn-danger">No, don't delete</button>
    </form>

    @*another option for the No/Cancel button*@
    @*<form asp-action="Index">
        <button type="submit" class="btn btn-danger">No, don't delete</button>
    </form>*@
</body>
</html>
