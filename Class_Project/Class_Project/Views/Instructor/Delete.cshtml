@model Instructor

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>Delete</title>
</head>
<body>
    <h1>Are you sure you want to delete this professor?</h1>
    <h2> @Model.FirstName @Model.LastName</h2>

    @*needed so id passes to Delete action*@
    <input asp-for=InstructorId type= hidden />

    <div class="text-center">
        @*<form asp-action="Delete" method="post">
            <button type="submit" class="btn btn-success">Yes, delete</button>
        </form>
        <form asp-action="Index" method="post">
            <button type="submit" class="btn btn-danger">No, don't delete</button>
        </form>*@

        <form asp-action="Delete" method="post">
            <button type="submit" class="btn btn-success">Yes, delete</button>
            <button type="button" onclick="history.go(-1)" class="btn btn-danger">No, don't delete</button>
        </form>
    </div>
</body>
</html>
