@* - Views generate the user interface
   - Views are .cshtml markup files that contain both HTML and C#
   - Use the @ symbol to insert C# into HTML *@

@*one student being passed from controller*@
@model Student

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Student Details</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    @if (Model != null)
    {
        <h3>Student:</h3>
        <p>ID: @Model.StudentId</p>
        <p>First name: @Model.FirstName</p>
        <p>Last name: @Model.LastName</p>
        <p>Is Veteran? @Model.IsVeteran</p>
        <p>GPA: @Model.GPA</p>
        <p>Major: @Model.Major</p>

        @*example from early on in the class before having a database*@
        @*<p>First name: @ViewBag.SMU_student.FirstName</p>*@
    }
    else{
        <h3>Student not found.</h3>
    }
</body>
</html>
