@*To create _Layout: right-click Shared folder, Add Item, Add Razor Layout*@
@*All of this will be displayed in all Views*@

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Sofia">
    @*for new nav bar*@
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"></script>
    @*for css*@
    <link href="~/css/myStyle.css" rel="stylesheet" />
</head>
<body>
    @*navigation bar*@
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
        <div class="container-fluid">
            <a class="navbar-brand" asp-controller="Instructor" asp-action="Index">Logo</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="collapsibleNavbar">
                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">Instructor</a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" asp-controller="Instructor" asp-action="Index">Index</a></li>
                            <li><a class="dropdown-item" asp-controller="Instructor" asp-action="Add">Add Instructor</a></li>
                        </ul>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">Student</a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" asp-controller="Student" asp-action="Index">Index</a></li>
                            <li><a class="dropdown-item" asp-controller="Student" asp-action="Add">Add Student</a></li>
                        </ul>
                    </li>
                </ul>
            </div>


            <div class="navbar-nav float-end">
                @if (User.Identity.IsAuthenticated)  // if user is logged in
                {
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle active" role="button" data-bs-toggle="dropdown">Welcome, @User.Identity.Name!</a>
                        <ul class="dropdown-menu">
                            <li><a class="nav-link text-dark" asp-action="Logout" asp-controller="Account">Logout</a></li>
                        </ul>
                    </li>
                }
                else  // if user is logged out
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-action="Login" asp-controller="Account">Login</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-action="Register" asp-controller="Account">Register</a>
                    </li>
                }
            </div>

        </div>
    </nav>

    <div>
        @*this is where the individual views will display their unique content*@
        @RenderBody()
    </div>

    @*footer example*@
    <hr />
    <div class="center"> 
        <h4>Optional footer section from _Layout</h4>
    </div>    
</body>
</html>
